                                <span class="d-sm-inline d-none">@User.Identity?.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end px-2 py-3 me-sm-n2" aria-labelledby="userDropdown">
                                <a class="dropdown-item border-radius-md" href="/Auth/Profile">Minha Conta</a>
                                <li><a class="dropdown-item border-radius-md" href="/Account/Logout">Sair</a></li>
