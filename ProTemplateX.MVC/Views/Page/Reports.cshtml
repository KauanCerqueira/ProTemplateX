@{
    ViewData["Title"] = "Relatórios";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="material-icons text-primary me-2 align-middle">bar_chart</i>
            Relatórios Gerais
        </h2>
    </div>

    <!-- KPIs -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow border-0 p-3 text-center">
                <h5>Total de Vendas</h5>
                <h3 class="text-success">R$ 12.540</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 p-3 text-center">
                <h5>Novos Usuários</h5>
                <h3 class="text-info">358</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow border-0 p-3 text-center">
                <h5>Conversões</h5>
                <h3 class="text-warning">27%</h3>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-5">
        <div class="col-md-8 mb-4">
            <div class="card shadow border-0 p-3">
                <h5 class="mb-3">Vendas Mensais</h5>
                <canvas id="barChart" height="200"></canvas>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 p-3">
                <h5 class="mb-3">Categorias</h5>
                <canvas id="pieChart" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Tabela -->
    <div class="card shadow border-0 p-3">
        <h5 class="mb-3">Últimos Registros</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Usuário</th>
                    <th>Ação</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>08/04/2025</td>
                    <td>João Silva</td>
                    <td>Compra</td>
                    <td>R$ 299,90</td>
                </tr>
                <tr>
                    <td>08/04/2025</td>
                    <td>Maria Souza</td>
                    <td>Cadastro</td>
                    <td>-</td>
                </tr>
                <tr>
                    <td>07/04/2025</td>
                    <td>Carlos Lima</td>
                    <td>Upgrade de plano</td>
                    <td>R$ 89,90</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctxBar = document.getElementById('barChart');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai'],
                datasets: [{
                    label: 'Vendas',
                    data: [5000, 4000, 6500, 8000, 7200],
                    backgroundColor: '#3A416F'
                }]
            }
        });

        const ctxPie = document.getElementById('pieChart');
        new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: ['Eletrônicos', 'Roupas', 'Serviços'],
                datasets: [{
                    data: [40, 35, 25],
                    backgroundColor: ['#3A416F', '#17C1E8', '#FBCF33']
                }]
            }
        });
    </script>
}
