@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="material-icons text-primary me-2 align-middle">groups</i>
            Gerenciamento de Usuários
        </h2>
        <a href="#" class="btn btn-success">
            <i class="material-icons me-1">person_add</i> Novo Usuário
        </a>
    </div>

    <!-- CAMPO DE BUSCA -->
    <div class="input-group mb-3">
        <span class="input-group-text bg-white">
            <i class="material-icons text-secondary">search</i>
        </span>
        <input type="text" class="form-control" placeholder="Buscar por nome, e-mail...">
    </div>

    <!-- TABELA DE USUÁRIOS -->
    <div class="card shadow border-0">
        <div class="card-body table-responsive p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Papel</th>
                        <th>Status</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- USUÁRIO EXEMPLO -->
                    <tr>
                        <td>João Silva</td>
                        <td>joao@email.com</td>
                        <td>Administrador</td>
                        <td><span class="badge bg-success">Ativo</span></td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-primary me-2">
                                <i class="material-icons">edit</i>
                            </a>
                            <a href="#" class="btn btn-sm btn-danger">
                                <i class="material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>Maria Souza</td>
                        <td>maria@email.com</td>
                        <td>Usuário</td>
                        <td><span class="badge bg-secondary">Inativo</span></td>
                        <td class="text-end">
                            <a href="#" class="btn btn-sm btn-primary me-2">
                                <i class="material-icons">edit</i>
                            </a>
                            <a href="#" class="btn btn-sm btn-danger">
                                <i class="material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                    <!-- ADICIONE MAIS AQUI -->
                </tbody>
            </table>
        </div>
    </div>
</div>
